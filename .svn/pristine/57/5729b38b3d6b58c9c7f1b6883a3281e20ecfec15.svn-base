<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
		
		<!-- 1. Access(입장, 접근) bean 등록, 접근하는 페이지 권한이 부족하면 그걸 잡는 핸들러. 인가 기능 담당. -->
		<bean id="customAccessDenied" class="kr.co.itcruit.security.CustomAccessDeniedHandler"/>
		
		<!-- 2. Success(성공) bean 등록 인증 기능 담당.-->
		<bean id="customLoginSuccess" class="kr.co.itcruit.security.CustomLoginSuccessHandler"/>
		
		<!-- 3. 패스워드 인코더 bean 등록 -->
		<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
		
		<!-- 3. 패스워드 인코더 bean 등록(Custom) -->
<!-- 		<bean id="customPasswordEncoder" class="kr.or.ddit.security.CustomNoOpPasswordEncoder"/> -->
	
		<!-- 4. 디테일 서비스 bean 등록 -->
		<bean id="customUserDetailsService" class="kr.co.itcruit.security.CustomUserDetailsService"/>
	
	
		<security:http>
				
			<!-- 5. 로그인 페이지 설정 -->
			<security:form-login login-page="/main/loginForm.do" authentication-success-handler-ref="customLoginSuccess" />		
	
			<!-- 6. Success 핸들러 참조 설정 -->
			<security:access-denied-handler ref="customAccessDenied"/>
			
			<!-- 7. 자동 로그인 설정 -->
			<security:remember-me data-source-ref="dataSource" token-validity-seconds="604800"/>
			
			<!-- 
				로그아웃 처리를 위한 URI 지정. 이 후에 세션을 무효화.	-> 로그인 페이지로 이동.
			 -->
			<security:logout logout-url="/logout" invalidate-session="true" delete-cookies="remember-me, JSESSION_ID" logout-success-url="/main/index"/>
			
			
		</security:http>
		
		
		<security:authentication-manager>
			<security:authentication-provider user-service-ref="customUserDetailsService">
				<security:password-encoder ref="bcryptPasswordEncoder"/>
			</security:authentication-provider>
		</security:authentication-manager>
		
	</beans>
