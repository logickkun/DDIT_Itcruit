	}
	
	/* 지원서 작성 버튼 속성 */
	.btn-success {
	    color: #fff;
	    background-color: #cd7bfe;
	    border-color: #cd7bfe;
	}

	.btn-success:hover {
	    color: #fff;
	    background-color: #a135bc;
	    border-color: #a135bc;
	}

	/* 채용달력 영역에 세로선으로 구분하려고 */
	.vertical-divider {
	  border-right: 1px solid #000;
	  min-height: 100vh; /* 콘텐츠보다 충분히 큰 값으로 설정 */
