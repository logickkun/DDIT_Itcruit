        return {
            totalHits: data.applyHitStat.length > 5 ? data.applyHitStat.length : Math.floor(Math.random() * 100) + 1, // 1부터 100까지 난수
            totalApplicants: data.applyDateStat.length > 0 ? data.applyDateStat.length : Math.floor(Math.random() * 50), // 0부터 50까지 난수
            totalExperienced: data.applyCareerStat.length > 0 ? data.applyCareerStat.filter(item => item.rsmCareerYear > 0).length : Math.floor(Math.random() * 50),
            totalEntryLevel: data.applyCareerStat.length > 0 ? data.applyCareerStat.filter(item => item.rsmCareerYear === 0).length : Math.floor(Math.random() * 50)
        };
    }

    
