    function getRecruitApply(recruitNo, pstnCmmncdNm, month) {
    	
        $.ajax({
            url: "/myPage/enterprise/getRecruitApply",
            method: "GET",
            data: { recruitNo: recruitNo, pstnCmmncdNm: pstnCmmncdNm },
            success: function(res) {
            	
            	console.log(res.applyHitStat);
            	console.log(res.applyDateStat);
            	console.log(res.applyHitStat);
            	
            	var totalStats = calculateTotalStats(res);
                updateTotalStatsOnPage(totalStats);
            	
                var hitStats, applicantStats, careerStats, percentages, eduChartData, genderData;
                
                if (res && res.applyHitStat && res.applyHitStat.length > 0) {
                    hitStats = monthlyHitStat(res.applyHitStat, month);
                } else {
                    hitStats = generateRandomStats(5, 50);
                }

                if (res && res.applyDateStat && res.applyDateStat.length > 0) {
                    applicantStats = monthlyApplicationCount(res.applyDateStat, month);
                } else {
                    applicantStats = generateRandomStats(5, 50);
                }

                if (res && res.applyCareerStat && res.applyCareerStat.length > 0) {
                    careerStats = categorizeApplicantsByCareer(res.applyCareerStat, month);
                } else {
                    careerStats = generateRandomCareerStats(5, 50); 
                }

                if (res && res.applyEduStat && res.applyEduStat.length > 0) {
                    percentages = aggregateAndCalculatePercentages(res.applyEduStat, month);
                    eduChartData = aggregateEducationData(res.applyEduStat, month);
                } else {
                    percentages = generateRandomPercentages();
                    eduChartData = generateRandomEduChartData(percentages);
                }

                updateCharts(hitStats, applicantStats, careerStats);
                updateEducationStatsUI(percentages);
                
                var pieChart = $('#hl-pie-ref').highcharts() || initPieChart('hl-pie-ref', '고졸 / 대졸자 비율', eduChartData);
                updatePieChartData(pieChart, eduChartData);

                if (res && res.applyGenderStat && res.applyGenderStat.length > 0) {
                    genderData = categorizeApplicantsByGenderCount(res.applyGenderStat, month);
                } else {
                    genderData = generateRandomGenderData();
                }

                updateGenderTrendChart(genderTrendChart, genderData);
            }
        });
    }
    
    function generateRandomStats(count, max) {
        return Array.from({length: count}, () => Math.floor(Math.random() * max));
    }

    function generateRandomCareerStats(count, max) {
        return {
            experiencedCounts: generateRandomStats(count, max),
            entryCounts: generateRandomStats(count, max)
        };
    }

    function generateRandomPercentages() {
        const levels = ['고등학교졸업', '대학교(2년)', '대학교(4년)', '대학교(석사)', '대학교(박사)'];
        let rawPercentages = levels.map(() => Math.random());
        let sum = rawPercentages.reduce((a, b) => a + b, 0);
        let percentages = {};

        let totalPercentageUsed = 0;
        levels.forEach((level, index) => {
            if (index === levels.length - 1) {
                percentages[level] = (100 - totalPercentageUsed).toFixed(1) + '%'; // 마지막 항목은 남은 퍼센트 모두 할당
            } else {
                let normalized = (rawPercentages[index] / sum) * 100;
                percentages[level] = Math.floor(normalized).toFixed(1) + '%'; // 소수점 이하 버림
                totalPercentageUsed += Math.floor(normalized);
            }
        });
        return percentages;
    }


    function generateRandomEduChartData(percentages) {
        return Object.keys(percentages).map(level => ({
            name: level,
            y: parseFloat(percentages[level])
        }));
    }

    function generateRandomGenderData() {
        return {
