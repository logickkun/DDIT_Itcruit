	<script>
		
		//db에서 뽑아낸 데이터 json파일로 가져와서 달력에 넣는 방식
		var eventSources = [
    	{
            title: '삼성전자',
            start: '2024-04-08T00:00', //시간 찍으면 dot로 나옴
            color: '#CC77FF',
            extendedProps: {
            	name: '이름',
            	processNumber: 'processNum'
            }
          },

          {
            title: '삼성전자',
            start: '2024-04-18T00:00', 
            color: '#808080',
          },    	{
