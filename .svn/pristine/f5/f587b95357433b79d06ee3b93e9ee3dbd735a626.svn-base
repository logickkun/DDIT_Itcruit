<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.co.itcruit.mapper.IRecruitMapper">
 
 	<select id="recruitDetail" parameterType="int" resultType="recruitVO">
 		select 
 			recruit_no, ent_no, recruit_ttl,
 			recruit_start_dt, recruit_end_dt, recruit_yn,
 			recruit_career_code, recruit_career_dt, ent_url,
 			recruit_hit, process_yn, process_amt,
 			recruit_pay, recruit_enroll_ymd, cmmncd_grp_cd,
 			cmmncd_nm1
 		from recruit
 		where recruit_no = #{recruitNo}
 	</select>
 
 </mapper>