	var deleteBtn = $("#deleteBtn");
	
	updateBtn.on("click", function(){
		console.log("버튼이 클릭되었습니다.");
		editdelForm.attr("method", "get");
		editdelForm.attr("action", "/freeBoard/update");
		editdelForm.submit();
	});
	
	deleteBtn.on("click", function(){
		if(confirm("정말로 삭제하시겠습니까?")){
			editdelForm.submit();
		}
	});
});
</script>


<script type="text/javascript">



//댓글 영역의 DOM 요소들을 가져옵니다.
const commentBtn = document.querySelector("#commentFrm");
const commentList = document.querySelector("#comment-list");
const total = document.querySelector("h5 > span");
const list = [];

//댓글 객체 생성자 함수를 정의합니다.
function Comment(content) {
this.userid = "작성자";
this.content = content;
this.date = "2024-04-12";
this.edit = '<i class="bi bi-pencil-square"></i>';
this.del = '<i class="bi bi-trash"></i>';
}

//각 댓글 요소를 생성하는 함수를 정의합니다.
function createRow(userid, content, date, edit, del, index) {
const ul = document.createElement("ul");
const li1 = document.createElement("li");
const li2 = document.createElement("li");
const li3 = document.createElement("li");
const li4 = document.createElement("li");
const li5 = document.createElement("li");

ul.append(li1);
ul.append(li2);
ul.append(li3);
ul.append(li4);
ul.append(li5);

ul.setAttribute("class", "comment-row");
li1.setAttribute("class", "comment-id");
li2.setAttribute("class", "comment-content");
li3.setAttribute("class", "comment-date");
li4.setAttribute("class", "comment-edit");
li5.setAttribute("class", "comment-del");

li1.innerHTML = userid;
li2.innerHTML = content;
li3.innerHTML = date;
li4.innerHTML = edit;
li5.innerHTML = del;


// 내용과 날짜 사이의 간격을 좁히기 위해 li2와 li3에 스타일을 추가합니다.
// li2.style.marginBottom = "50px"; // 내용과 다음 요소 간의 간격 조절
// li3.style.marginLeft = "-500px"; // 날짜와 이전 요소 간의 간격 조절
li4.style.paddingLeft = "100px"
li5.style.paddingLeft = "10px"
li5.style.paddingRight = "50px"

// 수정 아이콘에 data-index 속성 추가
li4.querySelector("i").setAttribute("data-index", index);

return ul;
}


//댓글 목록을 다시 그리는 함수를 정의합니다.
function drawing() {
commentList.innerHTML = "";
for (let i = list.length - 1; i >= 0; i--) {
 const row = createRow(list[i].userid, list[i].content, list[i].date, list[i].edit, list[i].del);
 commentList.append(row);
}
}

function totalRecord() {
total.innerHTML = `(${list.length})`;
}

function commentBtnHandler(e) {
e.preventDefault();
const input = e.target.content;
if (input.value === "") {
 alert("내용을 넣고 등록 버튼을 눌러주세요.");
 return;
}
const commentObj = new Comment(input.value);
list.push(commentObj);
totalRecord();

drawing();
e.target.reset();
}

//삭제 아이콘 클릭 이벤트 핸들러
function deleteCommentHandler(e) {
const commentIndex = e.target.dataset.index;
// 해당 댓글을 리스트에서 제거
list.splice(commentIndex, 1);
// 댓글 수 업데이트
totalRecord();
// 다시 그리기
drawing();
}

//삭제 아이콘 클릭 이벤트를 등록
commentList.addEventListener("click", function(e) {
if (e.target && e.target.matches(".comment-del i")) {
 deleteCommentHandler(e);
}
});

totalRecord();
commentBtn.addEventListener("submit", commentBtnHandler);

</script>

