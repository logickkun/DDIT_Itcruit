	public ServiceResult recruitRegisterInsert(RecruitVO recruitVO, HttpServletRequest req) {
		
		ServiceResult result = null;
		
		try {
			
			//기업 로그인 세션에서 꺼내온다.
			int entNo = 9999999;
			String entName = "TEST";
			
