			recruitVO.setEntNo(entNo);
			recruitVO.setEntNm(entName);
			
			int pass = myEntMapper.recruitRegisterInsert(recruitVO);
			recruitVO.setFlag(1);
			
			 if (pass > 0) {
				 
                pass = hireStts(recruitVO);
                recruitVO.setFlag(1);
