<%@ page language="java" contentType="UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>


<main>

<!-- Page content START -->

<div class="page-content justify-content-center">

	<div class="container row">
	
			<!-- Page main content START -->
	<div class="page-content-wrapper border col-md-8">

		<!-- Card START -->
		<div class="card bg-transparent border">

			<!-- Card header START -->
			<div class="card-header bg-light border-bottom">
				<!-- Search and select START -->
				<div class="row g-3 align-items-center justify-content-between">
					<!-- Search bar -->
					<div class="col-md-8">
						<form class="rounded position-relative">
							<input class="form-control bg-body" type="search" placeholder="Search" aria-label="Search">
							<button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
								<i class="fas fa-search fs-6 "></i>
							</button>
						</form>
					</div>

					<!-- Select option -->
					<div class="col-md-3">
						<select class="form-select border-0 z-index-9" aria-label=".form-select-sm">
							<option value="">Sort by</option>
							<option value="new">최신순</option>
							<option value="high">정답률 높은 순</option>
							<option value="low">정답률 낮은 순</option>
						</select>
					</div>
				
				</div>
				<!-- Search and select END -->

				<div class="row g-3 align-items-center">
					<div class="col-md-2">
						<select class="form-select border-0 z-index-9" aria-label=".form-select-sm">
							<option value="">난이도</option>
							<option value="easy">초보</option>
							<option value="normal">중급</option>
							<option value="hard">상급</option>
						</select>
					</div>
					<div class="col-md-2">
						<select class="form-select border-0 js-choice z-index-9" aria-label=".form-select-sm">
							<option value="">유형</option>
							<option value="C">C</option>	
							<option value="C++">C++</option>	
							<option value="C#">C#</option>	
							<option value="JAVA">JAVA</option>	
							<option value="JAVA">JAVASCRIPT</option>	
							<option value="PYTHON">PYTHON</option>	
						</select>
					</div>
					<div class="col-md-5">
						<select class="form-select border-0 js-choice z-index-9" aria-label=".form-select-sm">
							<option value="">기출문제</option>
							<option>최신순</option>
							<option>정답률 높은 순</option>
							<option>정답률 낮은 순</option>
						</select>
					</div>
				</div>

			</div>
			<!-- Card header END -->

			<!-- Card body START -->
			<div class="card-body">
				<!-- Course table START -->
				<div class="table-responsive border-0 rounded-3">
					<!-- Table START -->
					<table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
						<!-- Table head -->
						<thead>
							<tr>
								<th scope="col" class="border-0 rounded-start">상태</th>
								<th scope="col" class="border-0">제목</th>
								<th scope="col" class="border-0">유형</th>
								<th scope="col" class="border-0">난이도</th>
								<th scope="col" class="border-0 rounded-end">정답률</th>
							</tr>
						</thead>
						
						<!-- Table body START -->
						<tbody>
							<c:choose>
								<c:when test="${empty codeList}">
									<tr><td colspan="5">검색결과가 없어요</td></tr>								
								</c:when>
								
								<c:otherwise>
								
									<c:forEach items="${codeList }" var="code">
									<tr>
										<td>상태</td>
									
										<td>
											<div class="d-flex align-items-center position-relative">
											
												<h6 class="table-responsive-title mb-0 ms-2">	
													<a href="/codingtest/detail.do?qstnNo=${code.qstnNo}" class="stretched-link">${code.qstnTtl }</a>
													</h6>
												</div>
											</td>
			
											<!-- Table data -->
											<td>
												<div class="d-flex align-items-center">
													<!-- Info -->
													<div class="ms-2">
														<span>stack</span>
													</div>
												</div>
											</td>
			
											<!-- Table data -->
											<c:choose>
												<c:when test="${code.qstnGrd eq 1}">
													<td><span class="badge text-bg-primary"> 초보 </span></td>							
												</c:when>
												<c:when test="${code.qstnGrd eq 2}">
													<td><span class="badge text-bg-success">중급</span></td>							
												</c:when>
												<c:otherwise>
													<td><span class="badge text-bg-danger">상급</span></td>
												</c:otherwise>
											</c:choose>
											<!-- Table data -->
											<td>30$</td>
			
									</tr>
									</c:forEach>								
							
								</c:otherwise>
								
							</c:choose>
						
						</tbody>
						<!-- Table body END -->
					</table>
					<!-- Table END -->
				</div>
				<!-- Course table END -->
			</div>
			<!-- Card body END -->

			
		</div>
		<!-- Card END -->
		
	</div>


	<div class="page-content-wrapper border col-md-3"
			style="position: sticky; top: 0;">
        <!-- Profile content here -->
        <div class="card-body">
        	<p>asdsadsadasdasd</p>
        </div>
    </div>
	
	</div>


</div>
<!-- Page content END -->

</main>
